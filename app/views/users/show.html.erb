<h2>User info</h2>
<div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <h3>name：<%= @user.name %></h3>
  <h3>introduction：<%= @user.introduction %></h3>

  <p><%= link_to '設定', edit_user_path(@user) %></p>

</div>

<h2>Books</h2>
<% @books.each do |book| %>
 <div>
  <h3>Title</h3>
  <%= link_to book.title, book_path(book.id) %>

   <h3>Opinion</h3>
   <p><%= book.body %></p>
 </div>
<% end %>

<h2>New book</h2>
 <%= form_with model: @book do |f| %>

 <h4>Title</h4>
  <%= f.text_field :title %>

 <h4>Opinion</h4>
  <%= f.text_area :body %>

 <%= f.submit 'Create Book' %>

<% end %>

