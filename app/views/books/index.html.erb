<% @books.each do |book| %>
 <div>
  <%= link_to book.title, book_path(book.id) %>

   <p><%= book.body %></p>
 </div>
<% end %>

<h2>New book</h2>
 <%= form_with model: @book do |f| %>

 <h4>Title</h4>
  <%= f.text_field :title %>

 <h4>Opinion</h4>
  <%= f.text_area :body %>

 <%= f.submit 'Create Book' %>

<% end %>